#!/usr/bin/env tarantool

local fio = require('fio')

local link_dir = fio.dirname(arg[0])
local lsp_bin = fio.pathjoin(link_dir, fio.readlink(arg[0]))

package.setsearchroot(fio.dirname(fio.dirname(lsp_bin)))

-- For debug purposes
-- box.cfg{
--     log = "log.txt"
-- }

local main = require('tarantool-lsp.loop')
main(...)
